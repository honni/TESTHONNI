<!DOCTYPE html>
<html lang="en">

<head>
    {{> metatags }}
  
    <!-- Custom CSS -->
    <link href="/css/farm.css" rel="stylesheet">
</head>

<body>
  
  {{> navbar }}
<!--
    <div style="height: 50%">
      <div class="cover-shadow" style="height:100%">
        <div id="info2" class="intro-header" style="background-image: url('img/farm4.jpg')">
      
        </div>
      </div>
    </div>
-->
<!--    <div style="height: 50%">-->
  <div style="height:50vh">
<!--
      <div class="cover-shadow" style="height:100%">
        <img class="img-responsive" src="/img/farm4.jpg" alt="">
-->
      <div id="info2" class="intro-header" style="background-image: url('/img/{{farm.image}}')">
        <div class="cover-shadow" style="height:100%">
        <div class="content-overlay">
          <div class="left-cover">
          <h1>{{ farm.name }}</h1>
<!--          <h4>2 Miles</h4>-->
          <!-- set title on all labels based on raiting -->
          <fieldset class="rating">
            {{{ farm.stars }}}           
          </fieldset>
          <div class="star-text">
            {{ farm.numReviews }} Reviews
          </div>
          <br><br>
          <div style="float:left;">
            <h4>{{ farm.bio }}</h4>
          </div>
          </div>

          <div class="farm-info">
            <h4 id="phone-number">{{ farm.phoneNumber }}</h4>
            
            <a href="http://google.com" style="text-decoration:none;color:white">
              <h4 id="address">{{ farm.address.firstLine }}<br>{{ farm.address.secondLine }}</h4>
            </a>
<!--
            <div class="farm-produce">Meats</div>
            <div class="farm-produce">Cheese</div>
            <div class="farm-produce">Vegetables</div>
            <div class="farm-produce">Fruits</div>
            <div class="farm-produce">Honney</div>
-->
          </div>
        </div>
      </div>
    </div>
  </div>
    
    <!-- Page Content -->
    <div class="container">
      
      <!-- Produce -->
      <h1 class="page-header">Produce</h1>
      <div class="row">
        {{# produce }}
        <div class="col-md-3 col-sm-4 col-xs-6 thumb">
          <a class="thumbnail" href="#">
            <img class="img-responsive" src="{{ image }}" alt="">
            <div class="row">
              <div class="col-xs-1 col-xs-offset-1 col-sm-1 col-sm-offset-1">
                {{ food }}
              </div>
              <div class="col-xs-1 col-xs-offset-4 col-sm-1 col-sm-offset-5">
                {{ price }}
              </div>
            </div>
          </a>
        </div>
        {{/ produce }}
        
        <div class="col-md-3 col-sm-4 col-xs-6 thumb">
          <a id="add-item" class="thumbnail text-center" href="#"></a>
        </div>
      </div>
<!--    </div>-->
      
    <!-- Reviews -->
    <div class="white">
      <h1 class="page-header">Reviews</h1>
      <div class="row">
        {{# reviews }}
        <div class="col-md-3 col-sm-4 col-xs-6 review-block">
          <div class="row review-padding">
          <h4>{{ name }}</h4>
          
          <!-- Rating -->
          <fieldset class="rating">
            {{{ stars }}}
          </fieldset>
          <div class="star-text">
            {{ date }}
          </div>
          </div>
          <div class="row review-padding">
            <div>{{ comments }}</div>
          </div>
        </div>
        {{/ reviews }}
      </div>
    </div>
  
    <!-- Write a Review -->
    <div class="white">
      <h1 class="page-header">Write a Review</h1>
      <!-- Review Form -->
      <div class="row form-elements">
        <div class="col-xs-12 col-sm-6">
          <!-- TODO: Validate full name -->
          <form name="review" action="farm.html" method="">
            <div class="form-group">
              <label for="name">Full Name:</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" required>
            </div>
            <div class="form-group review-rating">
              <label class="star-text">Rating:</label>
  <fieldset class="rating">
    {{{ reviewStars }}}
  </fieldset>
            </div>

            <div class="form-group">
              <label for="comments">Comments:</label>
              <textarea class="form-control" rows="5" id="comments" placeholder="Start your review..." required></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary form-submit">Submit Review</button>
            </div>
          </form>
        </div>
      </div>
    </div>
      
      {{> footer }}

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
  
    <!-- Custom JavaScript -->
    <script src="/js/farmers.js"></script>
</body>

</html>
